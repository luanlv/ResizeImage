# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


GET           /                               controllers.ProductCtrl.index
GET           /d                              controllers.ProductCtrl.index2

GET           /image/list                      controllers.ImageCtrl.getList(name: String ?="")
GET           /image/upload   controllers.Application.upload
POST          /image/upload                    controllers.ImageCtrl.upload
GET           //cdn2.lvlblog.com/image/v2/:size/:uuid           controllers.ImageCtrl.get(uuid: String, size: String)
GET           /image/v2/:size/:uuid             controllers.ImageCtrl.get(uuid: String, size: String)

GET           /product/create                  controllers.ProductCtrl.viewCreate
POST          /product/create                  controllers.ProductCtrl.create

GET           /product/view/:code              controllers.ProductCtrl.viewProduct(code: String)


# Map static resources from the /public folder to the /assets URL path
GET           //cdn2.lvlblog.com/assets/v6/*file             controllers.Assets.versioned(path="/public", file)
GET           /assets/v6/*file             controllers.Assets.versioned(path="/public", file)
#GET          /assets/v1/*file             controllers.Assets.at(path="/public", file)
