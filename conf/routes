# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


GET           /2                               controllers.ProductCtrl.index
GET           /2d                              controllers.ProductCtrl.index2
GET           /                                controllers.ProductCtrl.client
GET           /d                               controllers.ProductCtrl.clientDelay
GET           /image/list                      controllers.ImageCtrl.getList(name: String ?="")
GET           /image/upload   controllers.Application.upload
POST          /image/upload                    controllers.ImageCtrl.upload
GET           //cdn.lvlblog.com/image/v1/:size/:uuid             controllers.ImageCtrl.get(uuid: String, size: String)
GET           /image/v1/:size/:uuid             controllers.ImageCtrl.get(uuid: String, size: String)

GET           /product/create                  controllers.ProductCtrl.viewCreate
POST          /product/create                  controllers.ProductCtrl.create

GET           /product/view/:code                  controllers.ProductCtrl.viewProduct(code: String)


# Map static resources from the /public folder to the /assets URL path
#GET           //cdn.lvlblog.com/assets/v1/*file             controllers.Assets.versioned(path="/public", file)
GET           /assets/v1/*file             controllers.Assets.versioned(path="/public", file)
#GET          /assets/v1/*file             controllers.Assets.at(path="/public", file)
