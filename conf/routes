# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


GET           /                                controllers.ProductCtrl.index2
GET           /client                          controllers.ProductCtrl.client
GET           /clientDelay                     controllers.ProductCtrl.clientDelay
GET           /image/list                      controllers.ImageCtrl.getList(name: String ?="")
GET           /image/upload   controllers.Application.upload
POST          /image/upload                    controllers.ImageCtrl.upload
GET           //cdn.lvlblog.com/image/1/:size/:uuid             controllers.ImageCtrl.get(uuid: String, size: String)
GET           /image/1/:size/:uuid             controllers.ImageCtrl.get(uuid: String, size: String)

GET           /product/create                  controllers.ProductCtrl.viewCreate
POST          /product/create                  controllers.ProductCtrl.create

GET           /product/v/:code                  controllers.ProductCtrl.viewProduct(code: String)

GET          /delay                             controllers.ProductCtrl.index

# Map static resources from the /public folder to the /assets URL path
GET           //cdn.lvlblog.com/assets/110715/*file             controllers.Assets.versioned(path="/public", file)
GET           /assets/110715/*file             controllers.Assets.versioned(path="/public", file)
#GET           /assets/110715/*file             controllers.Assets.at(path="/public", file)

